<div class="container">
  <div class="item">
    <div class="item-info">
      <%= image_tag cl_image_path @item.photo.path %>
      <h1><%= @item.name %></h1>
      <div class="item-icons">
        <p><i class="fa fa-filter" aria-hidden="true"></i> <%= @item.category %></p>
        <p><i class="fa fa-tag" aria-hidden="true"></i> <%= @item.brand %></p>
        <p><i class="fa fa-star" aria-hidden="true"></i> <%= @item.condition %></p>
      </div>
      <h3>Description</h3>
      <p><%= @item.description %></p>
      <div class = "add-item">
        <%= link_to "Go Back", :back, class: "btn btn-primary" %>
      </div>
    </div>

    <div class="booking">
      <div class="price-review">
      <p>ï¿¥<%= @item.price %></p><p> /per day</p>
      </div>
      <div class="calendars">
        <h3>Book it. Be dapper.</h3>
        <%= simple_form_for [@item, @booking] do |i| %>
          <%= i.input :start_date, as: :string, input_html: {class: 'datepicker'} %>
          <%= i.input :end_date, as: :string, input_html: {class: 'datepicker'}%>
          <%= i.button :submit, class: "btn btn-primary" %>
          <% end %>
      </div>
      <div id="map" style="width: 233px; height: 265px;"></div>

      <% content_for(:after_js) do %>
        <%= javascript_tag do %>
                    var style = [
              {
                  "featureType": "road",
                  "stylers": [
                      {
                          "hue": "#5e00ff"
                      },
                      {
                          "saturation": -79
                      }
                  ]
              },
              {
                  "featureType": "poi",
                  "stylers": [
                      {
                          "saturation": -78
                      },
                      {
                          "hue": "#6600ff"
                      },
                      {
                          "lightness": -47
                      },
                      {
                          "visibility": "off"
                      }
                  ]
              },
              {
                  "featureType": "road.local",
                  "stylers": [
                      {
                          "lightness": 22
                      }
                  ]
              },
              {
                  "featureType": "landscape",
                  "stylers": [
                      {
                          "hue": "#6600ff"
                      },
                      {
                          "saturation": -11
                      }
                  ]
              },
              {},
              {},
              {
                  "featureType": "water",
                  "stylers": [
                      {
                          "saturation": -65
                      },
                      {
                          "hue": "#1900ff"
                      },
                      {
                          "lightness": 8
                      }
                  ]
              },
              {
                  "featureType": "road.local",
                  "stylers": [
                      {
                          "weight": 1.3
                      },
                      {
                          "lightness": 30
                      }
                  ]
              },
              {
                  "featureType": "transit",
                  "stylers": [
                      {
                          "visibility": "simplified"
                      },
                      {
                          "hue": "#5e00ff"
                      },
                      {
                          "saturation": -16
                      }
                  ]
              },
              {
                  "featureType": "transit.line",
                  "stylers": [
                      {
                          "saturation": -72
                      }
                  ]
              },
              {}
          ];
          var handler = Gmaps.build('Google');
          handler.buildMap({
            provider: { styles: style},
            internal: { id: 'map' } }, function() {
            markers = handler.addMarkers(<%= raw @hash.to_json %>);
            handler.bounds.extendWith(markers);
            handler.fitMapToBounds();
            if (markers.length == 0) {
              handler.getMap().setZoom(2);
            } else if (markers.length == 1) {
              handler.getMap().setZoom(8);
            }
          });
        <% end %>
      <% end %>

    </div>
  </div>
</div>
