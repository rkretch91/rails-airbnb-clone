<div class="row forms">
  <div class="col-xs-4 col-xs-offset-4">
    <h1>add a new item!</h1>
      <%= simple_form_for @item do |i| %>
        <%= i.input :name %>
        <%= i.input :category %>
        <%= i.input :description %>
        <%= i.input :condition %>
        <%= i.input :brand %>
        <%= i.input :price %>
        <%= i.button :submit %>
      <% end %>
  </div>
</div>


