<%= link_to "home", root_path %>
<div class="container cards">
  <div class="category-title">
    <h2><%= @query_message %></h2>
    <%= link_to "See All", items_path %>
  </div>

<div class="row">
  <div class="col col-sm-4 ">
    <form action="/items" method="get" >
      <select name="category" id="category_select">
        <option value="">Choose category...</option>
        <% Item.categories.each do|category|%>
          <option value="<%= category %>"<%= category == @preselect[:category] ? "selected" : "" %> > <%= category.capitalize %></option>
        <% end %>
      </select>
      <input type="hidden" name="search" value=<%= params[:search] %> >
      <select name="brand" id="brand_select">
        <option value="">Choose brand...</option>
        <% Item.brands.each do|brand|%>
          <option value="<%= brand %>"<%= brand == @preselect[:brand] ? "selected" : "" %> > <%= brand.capitalize %></option>
        <% end %>
      </select>
      <select name="condition" id="condition_select">
        <option value="">Choose condition...</option>
        <% Item.conditions.each do|condition|%>
          <option value="<%= condition %>" > <%= condition.capitalize %></option>
        <% end %>
      </select>

      <br><br>

<!--       <div class="form-group">
        <input type="text" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default">Submit</button> -->

      <br><br>
      <input type="submit">
    </form>
  </div>
</div>


  <div class="row">
    <% @items.each do |item| %>
    <div class="col col-sm-4 ">
      <%= link_to item_path(item), class: "card-link" do %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= item.photo? ? (cl_image_path item.photo.path) : (image_path 'Flatlay.JPG') %>');">
      <% end %>
        <div class="card-category"><%= item.name %></div>
        <div class="card-description">
          <p><%= item.brand %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
