<div class="search-container">
<!--   <div class="row"> -->
<!--     <div class="col col-sm-4"> -->
      <form action="/items" method="get" class="filters">
        <div>
          <h1>Refine Your Search</h1>
        </div>
        <div class="search-inputs">
          <select name="category" id="category_select">
            <option value="">CATEGORY</option>
            <% Item.categories.each do|category|%>
              <option value="<%= category %>"<%= category == @preselect[:category] ? "selected" : "" %> > <%= category.capitalize %></option>
            <% end %>
          </select>
          <input type="hidden" name="search" value=<%= params[:search] %> >
          <select name="brand" id="brand_select">
            <option value="">BRAND</option>
            <% Item.brands.each do|brand|%>
              <option value="<%= brand %>"<%= brand == @preselect[:brand] ? "selected" : "" %> > <%= brand.capitalize %></option>
            <% end %>
          </select>
          <select name="condition" id="condition_select">
            <option value="">CONDITION</option>
            <% Item.conditions.each do|condition|%>
              <option value="<%= condition %>" > <%= condition.capitalize %></option>
            <% end %>
          </select>
        </div>
  <!--       <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button> -->
        <div class="submit-filter">
          <input type="submit" class="btn btn-primary">
        </div>
      </form>
<!--     </div> -->
<!--   </div> -->
</div>

<div class="search-banner">
  <%= image_tag "search-banner.png", class: "search-banner-image" %>
</div>


<div class="container cards">
  <div class="row">
    <% @items.each do |item| %>
    <div class="col col-xs-12 col-sm-4">
      <%= link_to item_path(item), class: "card-link" do %>
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= item.photo? ? (cl_image_path item.photo.path) : (image_path 'Flatlay.JPG') %>');">
      <% end %>
        <div class="card-category"><%= item.name %></div>
      </div>
      <div class="card-info">
        <p><%= item.brand %></p>
        <p>ï¿¥<%= item.price %>/day</p>
      </div>
    </div>
    <% end %>
  </div>
</div>
